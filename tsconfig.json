{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "removeComments": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"]
  },
  "exclude": [
    "node_modules",
    "static"
  ],
  "compileOnSave": false
}
