body, html
  box-sizing border-box
  width 100%
  height 100%
  overscroll-behavior-x none

.userName
  padding 2px

.weightTable, td
  border-collapse collapse;
  border 1px solid #aaa

.weightTable
  max-width 100%
  td
    padding 5px
  .specTd
    white-space nowrap
    padding 2px
    border-width 0

.prevWeightTable
  @extend .weightTable
  display inline-table
  margin-right 10px;
  user-select none

.scrollFiller
  display inline-block
  width 100%

.scrollWrap
  white-space nowrap
  overflow-x auto

.progForm
  display table
  .progSelect
    display table-row
    label
      display table-cell
      text-align right
      padding-right 4px
    select
      display table-cell

.weight, .count
  width 4em

.weightForm
  margin 5px